{
    "name": "streamer-soundboard",
    "version": "1.0.0",
    "description": "Streamer Reaction Soundboard",
    "main": "src/main/index.js",
    "scripts": {
        "dev": "concurrently \"vite --port 5173 --strictPort\" \"wait-on tcp:5173 && cross-env ELECTRON_RUN_AS_NODE= electron .\"",
        "build": "vite build",
        "dist": "npm run build && electron-builder"
    },
    "build": {
        "appId": "com.streamer.soundboard",
        "productName": "Streamer Soundboard",
        "files": [
            "dist/**/*",
            "src/main/**/*",
            "package.json"
        ],
        "directories": {
            "output": "release"
        },
        "mac": {
            "target": "dmg",
            "icon": "build/icon.png"
        },
        "win": {
            "target": [
                "nsis",
                "portable"
            ]
        },
        "nsis": {
            "oneClick": false,
            "perMachine": false,
            "allowToChangeInstallationDirectory": true
        }
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "clsx": "^2.1.0",
        "electron-store": "^11.0.2",
        "howler": "^2.2.4",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "rxjs": "^7.8.2",
        "stubborn-utils": "^1.0.2",
        "uuid": "^9.0.1"
    },
    "devDependencies": {
        "@vitejs/plugin-react": "^4.2.1",
        "concurrently": "^9.2.1",
        "cross-env": "^10.1.0",
        "electron": "^28.3.3",
        "electron-builder": "^26.4.0",
        "vite": "^5.1.0",
        "wait-on": "^7.2.0"
    }
}